@{
    ViewData["Title"] = "Thống Kê";
}

<div class="row">
    <div class="col-6">
        <h2 class="text-primary">Thống Kê</h2>
    </div>
</div>

<div class="p-4 border-top border-bottom">
    <figure class="highcharts-figure">
        <div id="container-warehouse" class="highcharts-container"></div>
        <p class="highcharts-description">
        </p>
    </figure>
</div>

<div class="p-4 border-top border-bottom">
    <figure class="highcharts-figure">
        <div id="container-sold" class="highcharts-container"></div>
        <p class="highcharts-description">
        </p>
    </figure>
</div>


@section Styles {
    <style>
        .highcharts-figure,
        .highcharts-data-table table {
            min-width: 310px;
            max-width: 800px;
            margin: 1em auto;
        }

        .highcharts-container {
            height: 400px;
        }

        .highcharts-data-table table {
            font-family: Verdana, sans-serif;
            border-collapse: collapse;
            border: 1px solid #ebebeb;
            margin: 10px auto;
            text-align: center;
            width: 100%;
            max-width: 500px;
        }

        .highcharts-data-table caption {
            padding: 1em 0;
            font-size: 1.2em;
            color: #555;
        }

        .highcharts-data-table th {
            font-weight: 600;
            padding: 0.5em;
        }

        .highcharts-data-table td,
        .highcharts-data-table th,
        .highcharts-data-table caption {
            padding: 0.5em;
        }

        .highcharts-data-table thead tr,
        .highcharts-data-table tr:nth-child(even) {
            background: #f8f8f8;
        }

        .highcharts-data-table tr:hover {
            background: #f1f7ff;
        }
    </style>
}

@section Scripts {
    <script src="https://code.highcharts.com/highcharts.js"></script>
    <script src="https://code.highcharts.com/modules/data.js"></script>
    <script src="https://code.highcharts.com/modules/drilldown.js"></script>
    <script src="https://code.highcharts.com/modules/exporting.js"></script>
    <script src="https://code.highcharts.com/modules/export-data.js"></script>
    <script src="https://code.highcharts.com/modules/accessibility.js"></script>

    <script>
        Highcharts.chart('container-warehouse', {
            chart: {
                type: 'column'
            },
            title: {
                align: 'left',
                text: 'Số lượng sách trong kho'
            },
            accessibility: {
                announceNewData: {
                    enabled: true
                }
            },
            xAxis: {
                type: 'category'
            },
            yAxis: {
                title: {
                    text: 'Số lượng sách'
                }

            },
            legend: {
                enabled: false
            },
            plotOptions: {
                series: {
                    borderWidth: 0,
                    dataLabels: {
                        enabled: true,
                        format: '{point.y}'
                    }
                }
            },

            tooltip: {
                headerFormat: '<span style="font-size:11px">{series.name}</span><br>',
                pointFormat: '<span style="color:{point.color}">{point.name}</span>: <b>{point.y}</b> trên tổng<br/>'
            },

            series: [
                {
                    name: 'Sách',
                    colorByPoint: true,
                    data: @Html.Raw(ViewData["dataWareHouseParent"])
                }
            ],
            drilldown: {
                breadcrumbs: {
                    position: {
                        align: 'right'
                    }
                },
                series: @Html.Raw(ViewData["dataWareHouseChild"])
            }
        });
    </script>
    <script>
        Highcharts.chart('container-sold', {
            chart: {
                type: 'column'
            },
            title: {
                align: 'left',
                text: 'Số lượng sách đã bán'
            },
            accessibility: {
                announceNewData: {
                    enabled: true
                }
            },
            xAxis: {
                type: 'category'
            },
            yAxis: {
                title: {
                    text: 'Số lượng sách'
                }

            },
            legend: {
                enabled: false
            },
            plotOptions: {
                series: {
                    borderWidth: 0,
                    dataLabels: {
                        enabled: true,
                        format: '{point.y}'
                    }
                }
            },

            tooltip: {
                headerFormat: '<span style="font-size:11px">{series.name}</span><br>',
                pointFormat: '<span style="color:{point.color}">{point.name}</span>: <b>{point.y}</b> trên tổng<br/>'
            },

            series: [
                {
                    name: 'Sách',
                    colorByPoint: true,
                    data: @Html.Raw(ViewData["dataSoldParent"])
                }
            ],
            drilldown: {
                breadcrumbs: {
                    position: {
                        align: 'right'
                    }
                },
                series: @Html.Raw(ViewData["dataSoldChild"])
            }
        });
    </script>
}