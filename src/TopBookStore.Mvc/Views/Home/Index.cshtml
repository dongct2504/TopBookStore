@model HomeIndexViewModel
@{
    ViewData["Title"] = "Trang Chủ";

    RouteDictionary currentRoute = Model.CurrentRoute;
    RouteDictionary routes = Model.CurrentRoute.Clone();
}

<h1>Tất cả sách</h1>

<div class="row pb-3">
    @foreach (Book book in Model.Books)
    {
        <div class="col-md-2 col-4">
            <div class="row p-2">
                <div class="col-12 p-1 card">
                    <a asp-controller="Book" asp-action="Details" asp-route-id="@book.BookId">
                        @if (book.ImageUrl is not null)
                        {
                            <img src="@book.ImageUrl" class="card-img-top image
                                image-fluid rounded" />
                        }
                        else
                        {
                            <img src="~/imgs/books/default.jpg" class="card-img-top image
                                image-fluid rounded" />
                        }
                    </a>
                    <div class="card-body">
                        <a asp-controller="Book" asp-action="Details" asp-route-id="@book.BookId">
                            <h6 class="card-title">@book.Title</h6>
                        </a>
                        <p class="card-price">
                            Giá: <b>@book.DiscountPrice.ToString("#,## đ")</b><br />
                            @if (book.DiscountPercent != 0)
                            {
                                <strike>@book.Price.ToString("#,## đ")</strike>
                            }
                        </p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@{
    @* int startPage = Math.Max(1, currentRoute.PageNumber); *@

    routes = Model.CurrentRoute.Clone();

    for (int i = 1; i <= Model.TotalPages; i++)
    {
        routes.PageNumber = i;
        <a class="btn btn-outline-primary @Nav.Active(i, currentRoute.PageNumber)"
            asp-action="Index" asp-all-route-data="@routes">
            @i
        </a>
    }
}