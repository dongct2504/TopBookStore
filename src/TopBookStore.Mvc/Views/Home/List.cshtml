@model BookListViewModel
@{
    ViewData["Title"] = "Trang Chủ";

    RouteDictionary current = Model.CurrentRoute;
    RouteDictionary routes = Model.CurrentRoute.Clone();
}

<h1>Tất cả sách</h1>

<form asp-controller="Cart" asp-action="Add">
    <table class="table table-bordered table-striped table-md">
        <thead class="bg-dark text-white">
            <tr>
                <th>
                    Tiêu Đề
                </th>
                <th>
                    Giá Thành
                </th>
                <th>
                    Thể Loại
                </th>
                <th>
                    Tác Giả
                </th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (Book book in Model.Books)
            {
                <tr>
                    <td>
                        <a asp-controller="Book" asp-action="Details" asp-route-id="@book.BookId"
                            asp-route-slug="@book.Title.Slug()">
                            @book.Title
                        </a>
                    </td>
                    <td>
                        @book.Price.ToString("#,##0.00 VND")
                    </td>
                    <td>
                        @book.Category.Name
                    </td>
                    <td>
                        @foreach (Author author in book.Authors)
                        {
                            <a asp-controller="Author" asp-action="Details" asp-route-id="@author.AuthorId">
                                @author.FullName
                            </a>
                        }
                    </td>
                    <td class="text-center">
                        <a class="btn btn-success" asp-controller="Order" asp-action="BuyItem"
                            asp-route-id="@book.BookId">
                            Mua Ngay
                        </a>
                    </td>
                    <td class="text-center">
                        <a class="btn btn-primary" asp-controller="Cart" asp-action="Add"
                            asp-route-id="@book.BookId">
                            Thêm Vào Giỏ
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>

@{
    routes = Model.CurrentRoute.Clone();

    for (int i = 1; i <= Model.TotalPages; i++)
    {
        routes.PageNumber = i;
        string active = @Nav.Active(i, current.PageNumber);

        <a asp-action="List" asp-all-route-data="@routes" asp-route-id="@Model.Id"
            class="btn btn-outline-primary @active">@i</a>
    }
}