<div class="mb-3 row">
    <div class="col-md-8 offset-3">
        @if (ViewBag.Action == "Add")
        {
            <div class="row">
                <div class="col">
                    <button type="submit" class="btn btn-primary form-control">
                        Tạo
                    </button>
                </div>
                <div class="col">
                    <a asp-action="Index" class="btn btn-secondary form-control">
                        Quay Lại
                    </a>
                </div>
            </div>
        }
        else
        {
            <div class="row">
                <div class="col">
                    <button type="submit" class="btn btn-primary form-control">
                        Chỉnh Sửa
                    </button>
                </div>
                <div class="col">
                    <a class="btn btn-secondary form-control" asp-action="Index">
                        Quay Lại
                    </a>
                </div>
            </div>
        }
    </div>
</div>