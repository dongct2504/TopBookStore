@using Microsoft.AspNetCore.Identity
@using TopBookStore.Infrastructure.Identity

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a id="manage" class="nav-link text-white" asp-area="Identity" 
            asp-page="/Account/Manage/Index" title="Manage">
            <span class="fa fa-user"></span>&nbsp;@UserManager.GetUserName(User)!
        </a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" 
            asp-page="/Account/Logout" 
            asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link text-white border-0">
                <span class="fas fa-sign-out-alt"></span>&nbsp;Đăng Xuất
            </button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-white" id="register" asp-area="Identity" asp-page="/Account/Register">
            <span class="fas fa-user-plus"></span>&nbsp;Đăng Ký
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-white" id="login" asp-area="Identity" asp-page="/Account/Login">
            <span class="fas fa-sign-in-alt"></span>&nbsp;Đăng Nhập
        </a>
    </li>
}
