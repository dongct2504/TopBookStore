@model Author
@{
    ViewData["Title"] = "Chi Tiết Tác Giả";
}

<h1>Chi Tiết Tác Giả</h1>

<div class="row">
    <div class="col-lg-8">
        <h2>Những Cuốn Sách Hay Của @Model.FullName</h2>
        <table class="table table-striped table-bordered table-md">
            <thead>
                <tr>
                    <th>Sách Của @Model.FullName</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        @foreach (Book book in Model.Books)
                        {
                            <p>
                                <a asp-controller="Book" asp-action="Details"
                                   asp-route-id="@book.BookId">
                                    @book.Title
                                </a>
                            </p>
                        }
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>