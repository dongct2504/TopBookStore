@model Book
@{
    ViewData["Title"] = "Chi Tiết Sách";
}

<h1>Chi Tiết Sách</h1>

<div class="row">
    <div class="col-md-3">
        @if (Model.ImageUrl is not null)
        {
            <img class="image-fluid image rounded" 
                src="@Model.ImageUrl" id="previewImage" width="280px" />
        }
        else
        {
            <img class="image-fluid image rounded" 
                src="~/imgs/books/default.jpg" id="previewImage" width="280px" />
        }
    </div>

    <div class="col-md-9">
        <h2>@Model.Title</h2>
        <table class="table table-striped table-bordered table-md">
            <tr>
                <td>ISBN13</td>
                <td>@Model.Isbn13</td>
            </tr>
            <tr>
                <td>Giá gốc</td>
                <td>@Model.Price.ToString("#,## đ")</td>
            </tr>
            <tr>
                <td>Giá</td>
                <td>
                    @Model.DiscountPrice.ToString("#,## đ") - 
                    Đã giảm @Model.DiscountAmount.ToString("#,## đ")
                </td>
            </tr>
            <tr>
                <td>Thể loại</td>
                <td>
                    @foreach (Category category in Model.Categories)
                    {
                        <a asp-controller="Home" asp-action="Index" asp-route-id="@category.CategoryId">
                            @category.Name
                        </a>
                        @if (category != Model.Categories.Last())
                        {
                            <span>,</span>
                        }
                    }
                </td>
            </tr>
            <tr>
                <td>Tác giả</td>
                <td>
                    <a asp-controller="Author" asp-action="Details">
                        @Model.Author.FullName
                    </a>
                </td>
            </tr>
            <tr>
                <td>Số trang</td>
                <td>@Model.NumberOfPages.ToString("N0")</td>
            </tr>
        </table>
        <div class="mb-3">
            <a class="btn btn-success" asp-controller="Order" asp-action="BuyItem"
                asp-route-id="@Model.BookId">
                Mua Ngay
            </a>
            <a class="btn btn-primary" asp-controller="Cart" asp-action="Add"
                asp-route-id="@Model.BookId">
                Thêm Vào Giỏ
            </a>
        </div>

        <h3>Mô Tả</h3>
        <p>@Model.Description</p>
    </div>
</div>