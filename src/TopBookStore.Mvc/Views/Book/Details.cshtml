@model Book
@{
    ViewData["Title"] = "Chi Tiết Sách";
}

<h1>Chi Tiết Sách</h1>

<div class="row">
    <div class="col-md-4">
        @* Your image goes here *@
    </div>

    <div class="col-md-8">
        <h2>@Model.Title</h2>
        <table class="table table-striped table-bordered table-md">
            <tr>
                <td>Giá Cả:</td>
                <td>@Model.Price.ToString("#,##0.00 VND")</td>
            </tr>
            <tr>
                <td>Thể Loại:</td>
                <td>
                    @foreach (Category category in Model.Categories)
                    {
                        <a asp-controller="Home" asp-action="List" asp-route-id="@category.CategoryId">
                            @category.Name
                        </a>
                    }
                </td>
            </tr>
            <tr>
                <td>Tác Giả</td>
                <td>
                    <a asp-controller="Author" asp-action="Details">
                        @Model.Author.FullName
                    </a>
                </td>
            </tr>
            <tr>
                <td>Số Trang</td>
                <td>@Model.NumberOfPages.ToString("N0")</td>
            </tr>
        </table>
        <div class="mb-3">
            <a class="btn btn-success" asp-controller="Order" asp-action="BuyItem"
                asp-route-id="@Model.BookId">
                Mua Ngay
            </a>
            <a class="btn btn-primary" asp-controller="Cart" asp-action="Add"
                asp-route-id="@Model.BookId">
                Thêm Vào Giỏ
            </a>
        </div>

        <h3>Mô Tả</h3>
        <p>@Model.Description</p>
    </div>
</div>