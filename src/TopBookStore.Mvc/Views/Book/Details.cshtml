@model Book
@{
    ViewData["Title"] = "Chi Tiết Sách";
}

<h1>Chi Tiết Sách</h1>

<div class="row">
    <div class="col-md-4">
        @* Your image goes here *@
    </div>

    <div class="col-md-8">
        <h2>@Model.Title</h2>
        <table class="table table-striped table-bordered table-md">
            <tr>
                <td>Giá Cả:</td>
                <td>@Model.Price.ToString("#,##0.00 VND")</td>
            </tr>
            <tr>
                <td>Thể Loại:</td>
                <td>@Model.Category.Name</td>
            </tr>
            <tr>
                <td>Tác Giả</td>
                <td>
                    @foreach (Author author in Model.Authors)
                    {
                        <p>
                            <a asp-controller="Author" asp-action="Details">
                                @author.FullName
                            </a>
                        </p>
                    }
                </td>
            </tr>
            <tr>
                <td>Số Trang</td>
                <td>@Model.NumberOfPages?.ToString("N0")</td>
            </tr>
        </table>
        <div class="mb-3">
            <a class="btn btn-success" asp-controller="Cart" asp-action="Buy"
                asp-route-id="@Model.BookId">
                Mua Ngay
            </a>
            <a class="btn btn-primary" asp-controller="Cart" asp-action="Add"
                asp-route-id="@Model.BookId">
                Thêm Vào Giỏ
            </a>
        </div>

        <h3>Mô Tả</h3>
        <p>@Model.BookDescription</p>
    </div>
</div>