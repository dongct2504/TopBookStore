@model OrderIndexViewModel
@{
    ViewData["Title"] = "Đặt hàng";
}

<form method="post" asp-action="Payment" >
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-6 d-flex align-items-center">
                    <span class="fas fa-shopping-cart"></span>&nbsp;Giỏ hàng của bạn
                </div>
                <div class="col-6 text-end">
                    <a class="btn btn-info" asp-controller="Cart"
                       asp-action="Index">
                        Quay lại giỏ hàng
                    </a>
                </div>
            </div>
        </div>

        <div class="card-body">
            <div class="rounded p-2">
                <div class="row">
                    <div class="col-md-6 col-12 pb-4">
                        <div class="row">
                            <h4 class="d-flex justify-content-between align-items-center mb-3">
                                <span class="text-info">Nhập thông tin người nhận</span>
                            </h4>
                        </div>

                        <div class="mb-3 row">
                            <div class="col-md-3">
                                <label class="form-label">Tên</label>
                            </div>
                            <div class="col-md-9">
                                <input class="form-control" asp-for="OrderDto.Name" />
                                <span class="text-danger" asp-validation-for="OrderDto.Name"></span>
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <div class="col-md-3">
                                <label class="form-label">Số điện thoại</label>
                            </div>
                            <div class="col-md-9">
                                <input class="form-control" asp-for="OrderDto.PhoneNumber" />
                                <span class="text-danger" asp-validation-for="OrderDto.PhoneNumber"></span>
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <div class="col-md-3">
                                <label class="form-label">Đường</label>
                            </div>
                            <div class="col-md-9">
                                <input class="form-control" asp-for="OrderDto.Street" />
                                <span class="text-danger" asp-validation-for="OrderDto.Street"></span>
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <div class="col-md-3">
                                <label class="form-label">Quận</label>
                            </div>
                            <div class="col-md-9">
                                <input class="form-control" asp-for="OrderDto.District" />
                                <span class="text-danger" asp-validation-for="OrderDto.District"></span>
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <div class="col-md-3">
                                <label class="form-label">Thành phố</label>
                            </div>
                            <div class="col-md-9">
                                <input class="form-control" asp-for="OrderDto.City" />
                                <span class="text-danger" asp-validation-for="OrderDto.City"></span>
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <div class="col-md-3">
                                <label class="form-label">Quốc gia</label>
                            </div>
                            <div class="col-md-9">
                                <input class="form-control" asp-for="OrderDto.Country" />
                                <span class="text-danger" asp-validation-for="OrderDto.Country"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card-footer">
            <div class="row">
                <div class="col-md-5 col-12 offset-md-7">
                    <button class="btn btn-primary form-control">
                        Thanh toán
                    </button>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
